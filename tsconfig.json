{
  "compilerOptions": {
    "rootDir": "./src",  // Your source files are here
    "emitDeclarationOnly": false,  // Generate both .js and .d.ts files
    "target": "ES2020",
    "types": ["node"],
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",  // or your preferred output directory
    "declarationDir": "./dist/types",  // optional, for separate .d.ts files location
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}